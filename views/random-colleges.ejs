<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Random Colleges</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center">Random College List</h2>
        <table class="table table-bordered table-hover mt-4">
            <thead class="table-dark">
                <tr>
                    <th scope="col">College Name</th>
                    <th scope="col">Website</th>
                </tr>
            </thead>
            <tbody>
                <% if (colleges.length > 0) { %>
                    <% colleges.forEach(function(college) { %>
                        <tr>
                            <td><%= college.name %></td>
                            <td><a href="<%= college.website %>" target="_blank"><%= college.website %></a></td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="2" class="text-center">No colleges found.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>

    <!-- Bootstrap JS (optional for responsiveness) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
